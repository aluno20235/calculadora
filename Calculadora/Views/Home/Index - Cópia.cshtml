@{
    ViewData["Title"] = "Calculadora";
}

<div class="text-center; align-content-center";>
    <h1 class="display-4">Calculadora</h1>
    <br /><br />


    <!--linha de comentário-->
    @* e isto também é uma linha de comentário
        Este comentário não aparece no browser*@
<form>
    <table>
        <tr>
            <td colspan="5" name="display" class="border"></td>
        </tr>
        <tr>
            <td><input type="submit" name="" value="7" style="width:100%;height:100%" class="btn btn-primary"/></td>
            <td><input type="submit" name="" value="8" style="width:100%;height:100%" class="btn btn-primary"/></td>
            <td><input type="submit" name="" value="9" style="width:100%;height:100%" class="btn btn-primary"/></td>
            <td><input type="submit" name="" value=":" style="width:100%;height:100%" class="btn btn-success"/></td>
            <td><input type="submit" name="" value="+/-" style="width:100%;height:100%" class="btn btn-success"/></td>
        </tr>
        <tr>
            <td><input type="submit" name="" value="4" style="width:100%;height:100%" class="btn btn-primary"/></td>
            <td><input type="submit" name="" value="5" style="width:100%;height:100%" class="btn btn-primary"/></td>
            <td><input type="submit" name="" value="6" style="width:100%;height:100%" class="btn btn-primary"/></td>
            <td><input type="submit" name="" value="x" style="width:100%;height:100%" class="btn btn-success"/></td>
            <td><input type="submit" name="" value="C" style="width:100%;height:100%" class="btn btn-danger"/></td>
        </tr>
        <tr>
            <td><input type="submit" name="" value="1" style="width:100%;height:100%" class="btn btn-primary"/></td>
            <td><input type="submit" name="" value="2" style="width:100%;height:100%" class="btn btn-primary"/></td>
            <td><input type="submit" name="" value="3" style="width:100%;height:100%" class="btn btn-primary"/></td>
            <td><input type="submit" name="" value="-" style="width:100%;height:100%" class="btn btn-success"/></td>
            <td rowspan="2"><input type="submit" name="" value="=" style="width:100%;height:100%" class="btn btn-success"/></td>
        </tr>
        <tr>
            <td colspan="2"><input type="submit" name="" value="0" style="width:100%;height:100%" class="btn btn-primary"/></td>
            <td><input type="submit" name="" value="," style="width:100%;height:100%" class="btn btn-success"/></td>
            <td><input type="submit" name="" value="+" style="width:100%;height:100%" class="btn btn-success"/></td>
        </tr>
    </table>
</form>







</div>
